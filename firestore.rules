rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if true;  // Anyone can read user profiles
      allow create: if request.auth != null && request.auth.uid == userId;  // Only authenticated users can create their profile
      allow update: if request.auth != null && request.auth.uid == userId;  // Users can only update their own profile
    }
  }
} 